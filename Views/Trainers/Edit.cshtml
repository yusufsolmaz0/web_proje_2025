@model FitnessCenterManagement.Models.TrainerEditVM

@{
    ViewData["Title"] = "Edit Trainer";
}

<h1>Edit Trainer</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <hr />
            <h5>Bu trainer'ın yapabildiği servisler</h5>

            @for (int i = 0; i < Model.AllServices.Count; i++)
            {
                <div class="form-check">
                    <input class="form-check-input"
                           type="checkbox"
                           name="SelectedServiceIds"
                           value="@Model.AllServices[i].Id"
                           @(Model.AllServices[i].IsSelected ? "checked" : "") />
                    <label class="form-check-label">@Model.AllServices[i].Name</label>
                </div>
            }

            <br />
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
