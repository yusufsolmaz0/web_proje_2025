@model IEnumerable<FitnessCenterManagement.Models.Service>

@{
    ViewData["Title"] = "Services";
}

<div class="toolbar">
    <div>
        <h1 class="page-title mb-1">Services</h1>
        <div class="muted">Hizmetleri görüntüleyebilirsin.</div>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-action="Create">+ Create Service</a>
    }
</div>

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <strong>Service Listesi</strong>
        <span class="muted">@Model.Count() kayıt</span>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0 align-middle">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th style="width:160px;">Duration</th>
                        <th style="width:160px;">Price</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Name</td>
                            <td>@item.DurationMinutes dk</td>
                            <td>@item.Price ₺</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                }
                            </td>
                        </tr>
                    }

                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center p-4 muted">
                                Henüz service yok.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
