@model FitnessCenterManagement.Models.AppointmentListVM
@{
    ViewData["Title"] = "Appointment Details";
}

<div class="toolbar">
    <div>
        <h1 class="page-title mb-1">Appointment Details</h1>
        <div class="muted">Randevu detayları</div>
    </div>

    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
</div>

<div class="card">
    <div class="card-header">
        <strong>Detay</strong>
    </div>

    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Member</dt>
            <dd class="col-sm-9">@Model.MemberName</dd>

            <dt class="col-sm-3">Trainer</dt>
            <dd class="col-sm-9">@Model.TrainerName</dd>

            <dt class="col-sm-3">Service</dt>
            <dd class="col-sm-9">@Model.ServiceName</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.StartTime.ToString("dd.MM.yyyy HH:mm")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @if (Model.IsApproved)
                {
                    <span class="badge-soft badge-soft-success">Approved</span>
                }
                else
                {
                    <span class="badge-soft badge-soft-warning">Pending</span>
                }
            </dd>
        </dl>
    </div>
</div>
