@model FitnessCenterManagement.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="toolbar">
    <div>
        <h1 class="page-title mb-1">Delete Appointment</h1>
        <div class="muted text-danger">Bu işlem geri alınamaz</div>
    </div>

    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
</div>

<div class="card border-danger">
    <div class="card-header text-danger">
        <strong>Randevu Silme Onayı</strong>
    </div>

    <div class="card-body">
        <p>
            Aşağıdaki randevuyu silmek istediğine emin misin?
        </p>

        <dl class="row mb-4">
            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.StartTime.ToString("dd.MM.yyyy HH:mm")</dd>

            <dt class="col-sm-3">Approved</dt>
            <dd class="col-sm-9">
                @if (Model.IsApproved)
                {
                    <span class="badge-soft badge-soft-success">Approved</span>
                }
                else
                {
                    <span class="badge-soft badge-soft-warning">Pending</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger">
                    Yes, Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>
