@model FitnessCenterManagement.Models.Appointment

@{
    ViewData["Title"] = "Create Appointment";
}

<h1>Create Appointment</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="TrainerId" class="form-label"></label>
                <select asp-for="TrainerId" class="form-select" asp-items="ViewBag.TrainerId"></select>
                <span asp-validation-for="TrainerId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ServiceId" class="form-label"></label>
                <select asp-for="ServiceId" class="form-select" asp-items="ViewBag.ServiceId"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StartTime" class="form-label"></label>
                <!-- Takvim: MHRS benzeri -->
                <div class="mb-3">
                    <label class="form-label">Tarih Seç</label>
                    <input id="DateOnly" type="date" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Saat Seç (12:00 - 18:00)</label>
                    <select id="TimeOnly" class="form-select" disabled>
                        <option value="">Önce trainer + tarih seç</option>
                    </select>
                </div>

                <!-- Hidden gerçek StartTime -->
                <input type="hidden" id="StartTime" name="StartTime" />

                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script>
            const serviceSelect = document.getElementById("ServiceId");
            const trainerSelect = document.getElementById("TrainerId");
            const dateInput = document.getElementById("DateOnly");
            const timeSelect = document.getElementById("TimeOnly");
            const startTimeHidden = document.getElementById("StartTime");

            function resetTrainer() {
                trainerSelect.innerHTML = "";
                const opt = document.createElement("option");
                opt.value = "";
                opt.text = "Önce servis seç";
                trainerSelect.appendChild(opt);
                trainerSelect.disabled = true;
            }

            function resetTimes(msg) {
                timeSelect.innerHTML = "";
                const opt = document.createElement("option");
                opt.value = "";
                opt.text = msg || "Önce trainer + tarih seç";
                timeSelect.appendChild(opt);
                timeSelect.disabled = true;
                startTimeHidden.value = "";
            }

            async function loadTrainersForServiceAndDate() {
                const serviceId = serviceSelect.value;

                resetTimes("Önce trainer + tarih seç");

                trainerSelect.innerHTML = "";
                if (!serviceId) {
                    resetTrainer();
                    return;
                }

                trainerSelect.disabled = false;

                // Trainer listesini servis seçimine göre getiriyoruz.
                // Şimdilik tarih şartı yoksa da olur; ama senin sistemin date istiyor diye date paramı gönderelim:
                // date yoksa bugünün tarihi gönderelim
                const dateValue = dateInput.value ? `${dateInput.value}T12:00` : new Date().toISOString();

                const url = `/api/availabilityapi/available-trainers-for-service?serviceId=${encodeURIComponent(serviceId)}&date=${encodeURIComponent(dateValue)}`;
                const res = await fetch(url);

                if (!res.ok) {
                    const opt = document.createElement("option");
                    opt.value = "";
                    opt.text = "Trainer listesi alınamadı";
                    trainerSelect.appendChild(opt);
                    return;
                }

                const data = await res.json();

                const defaultOpt = document.createElement("option");
                defaultOpt.value = "";
                defaultOpt.text = "Trainer seç";
                trainerSelect.appendChild(defaultOpt);

                if (!data || data.length === 0) {
                    const opt = document.createElement("option");
                    opt.value = "";
                    opt.text = "Bu servisi yapan trainer yok";
                    trainerSelect.appendChild(opt);
                    return;
                }

                for (const t of data) {
                    const opt = document.createElement("option");
                    opt.value = t.id;
                    opt.text = t.fullName;
                    trainerSelect.appendChild(opt);
                }
            }

            async function loadAvailableTimes() {
                const trainerId = trainerSelect.value;
                const serviceId = serviceSelect.value;
                const dateValue = dateInput.value; // YYYY-MM-DD

                resetTimes("Saatler yükleniyor...");

                if (!serviceId) {
                    resetTimes("Önce servis seç");
                    return;
                }
                if (!trainerId) {
                    resetTimes("Önce trainer seç");
                    return;
                }
                if (!dateValue) {
                    resetTimes("Önce tarih seç");
                    return;
                }

                const url = `/api/availabilityapi/available-times?trainerId=${encodeURIComponent(trainerId)}&serviceId=${encodeURIComponent(serviceId)}&date=${encodeURIComponent(dateValue)}`;
                const res = await fetch(url);

                if (!res.ok) {
                    resetTimes("Saatler alınamadı");
                    return;
                }

                const times = await res.json();

                timeSelect.innerHTML = "";
                if (!times || times.length === 0) {
                    resetTimes("Bu trainer bu gün müsait değil");
                    return;
                }

                const first = document.createElement("option");
                first.value = "";
                first.text = "Saat seç";
                timeSelect.appendChild(first);

                for (const t of times) {
                    const opt = document.createElement("option");
                    opt.value = t; // "HH:mm"
                    opt.text = t;
                    timeSelect.appendChild(opt);
                }

                timeSelect.disabled = false;
            }

            function updateHiddenStartTime() {
                const dateValue = dateInput.value; // YYYY-MM-DD
                const timeValue = timeSelect.value; // HH:mm

                if (!dateValue || !timeValue) {
                    startTimeHidden.value = "";
                    return;
                }

                // Hidden StartTime format: YYYY-MM-DDTHH:mm
                startTimeHidden.value = `${dateValue}T${timeValue}`;
            }

            document.addEventListener("DOMContentLoaded", function () {
                resetTrainer();
                resetTimes("Önce servis seç");

                // servis seçilince trainer listesi
                serviceSelect.addEventListener("change", loadTrainersForServiceAndDate);

                // trainer veya tarih değişince saatleri getir
                trainerSelect.addEventListener("change", loadAvailableTimes);
                dateInput.addEventListener("change", loadAvailableTimes);

                // saat seçilince hidden StartTime oluşsun
                timeSelect.addEventListener("change", updateHiddenStartTime);

                // sayfa açılınca (istersen)
                loadTrainersForServiceAndDate();
            });
        </script>


    }
}
