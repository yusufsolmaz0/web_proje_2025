@model FitnessCenterManagement.Models.Appointment

@{
    ViewData["Title"] = "Edit Appointment";
}

<div class="toolbar">
    <div>
        <h1 class="page-title mb-1">Edit Appointment</h1>
        <div class="muted">Randevu bilgilerini güncelle</div>
    </div>

    <a class="btn btn-outline-secondary" asp-action="Index">Back</a>
</div>

<div class="card">
    <div class="card-header">
        <strong>Randevu Bilgileri</strong>
    </div>

    <div class="card-body">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="MemberId" />

            <div class="mb-3">
                <label class="form-label">Trainer</label>
                <select asp-for="TrainerId" class="form-select"
                        asp-items="ViewBag.TrainerId"></select>
            </div>

            <div class="mb-3">
                <label class="form-label">Service</label>
                <select asp-for="ServiceId" class="form-select"
                        asp-items="ViewBag.ServiceId"></select>
            </div>

            <div class="mb-3">
                <label asp-for="StartTime" class="form-label">Date & Time</label>
                <input asp-for="StartTime" type="datetime-local" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsApproved" class="form-check-input" />
                <label asp-for="IsApproved" class="form-check-label">
                    Approved
                </label>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save Changes</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
