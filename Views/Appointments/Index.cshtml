@model IEnumerable<FitnessCenterManagement.Models.AppointmentListVM>

@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Member</th>
            <th>Trainer</th>
            <th>Service</th>
            <th>Start Time</th>
            <th>Approved</th>
            <th style="width:260px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.MemberName</td>
                <td>@item.TrainerName</td>
                <td>@item.ServiceName</td>
                <td>@item.StartTime</td>
                <td>@(item.IsApproved ? "Yes" : "No")</td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <form asp-action="Approve" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-primary" @(item.IsApproved ? "disabled" : "")>
                                Approve
                            </button>
                        </form>

                        <form asp-action="Reject" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@item.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Reject</button>
                        </form>

                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Delete</a>
                    }
                    else
                    {
                        <span class="text-muted">Only admin can approve/reject</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
